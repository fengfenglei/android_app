        <item name="android:background">?colorPrimary</item>
        <item name="android:textColorPrimary">@color/main_text_color</item>
        <item name="android:textColorSecondary">@color/main_text_color</item>
        <item name="colorControlActivated">@android:color/white</item>
    </style>
    <style name="FeelyouWindowAnimTheme" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/out_from_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/in_from_left</item>
        <item name="android:activityCloseExitAnimation">@anim/out_from_right</item>
    </style>
    <style name="MultiLineChooseLayoutTags.SingleChoose" parent="MultiLineChooseLayoutTags">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="item_textColor">#666666</item>
        <item name="item_backgroundColor">#ffffff</item>
        <item name="item_selectedTextColor">#ffffff</item>
        <item name="item_selectedBackgroundColor">#ff5f5f</item>
        <item name="item_radius">3dp</item>
        <item name="item_strokeColor">#939393</item>
        <item name="item_selectedStrokeColor">#939393</item>
        <item name="item_strokeWidth">1px</item>
        <item name="item_horizontalSpacing">10dp</item>
        <!--这里设置固定大小,padding为0-->
        <item name="item_horizontalPadding">10dp</item>
        <item name="item_verticalPadding">5dp</item>
        <!--单位dp-->
        <item name="item_width">70</item>
        <item name="item_height">40</item>
        <!--限制tag显示长度,规则查看Textview-->
        <item name="item_maxEms">4</item>
        <!--单选-->
        <item name="item_multiChooseable">false</item>
