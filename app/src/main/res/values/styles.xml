<resources>
    <!--activity页面切换动画，在需要的activity配置文件中引用即可-->
    <style name="AnimActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@style/FeelyouWindowAnimTheme</item>
    </style>
    <!-- 状态栏 -->
