                    <!--android:textColor="@color/gray"-->
                    <!--android:textSize="17sp" />-->
            <!--</RelativeLayout>-->

            <!-- 微信支付 -->

            <RelativeLayout
                android:id="@+id/wx_pay_lay"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="2dp"
                android:background="@color/white" >

                <ImageView
                    android:id="@+id/mhl_checkout_wx_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/weixin_pic" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/mhl_checkout_wx_icon"
                    android:text="微信支付"
                    android:textColor="@color/gray"
                    android:textSize="17sp" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/setting_fgx" />

            <RelativeLayout
                android:id="@+id/alipay"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="2dp"
                android:background="@color/white" >

                <ImageView
                    android:id="@+id/mhl_checkout_alipay_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/zfb_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/mhl_checkout_alipay_icon"
                    android:text="支付宝"
                    android:textColor="@color/gray"
                    android:textSize="17sp" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/setting_fgx" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>