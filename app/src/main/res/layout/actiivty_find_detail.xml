<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">
        <include layout="@layout/common_title_bar" />

        <WebView
            android:id="@+id/webview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scrollbars="none" />

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_alignParentTop="true"
            android:background="@color/line_color" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/home_item_left_right_space_30"
            android:layout_marginRight="@dimen/home_item_left_right_space_30"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="3dp"
                android:background="@drawable/found_icon"/>
            <TextView
                android:id="@+id/discTags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textSize="@dimen/font_size_12"
                android:layout_gravity="center"
                android:text="小狼新发现"
                android:layout_weight="0.96"
                android:textColor="@color/main_text_three_color"
                />
            <LinearLayout
                android:id="@+id/iv_goods_collection_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/home_item_left_right_space_15"
                android:orientation="horizontal" >


                <ImageView
                    android:id="@+id/iv_goods_collection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginRight="3dp"
                    android:background="@drawable/collect_icon_normal"
                     />

                <TextView
                    android:id="@+id/iv_goods_collection_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:text="立即收藏"
                    android:textColor="@color/main_text_three_color"
                    android:textSize="@dimen/font_size_12" />
            </LinearLayout>
            <ImageView
                android:id="@+id/zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp"
                android:layout_marginRight="3dp"
                android:src="@drawable/found_like_native"
                />
            <TextView
                android:id="@+id/favors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textSize="@dimen/font_size_12"
                android:layout_gravity="center"
                android:text="小狼新发现"
                android:textColor="@color/main_text_three_color"
                />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>