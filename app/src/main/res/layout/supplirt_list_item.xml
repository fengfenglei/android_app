<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minHeight="10dip"
    android:background="@color/line_color"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:id="@+id/item_layout1"
        android:layout_width="match_parent"
        android:layout_height="235dp"
        android:orientation="vertical"
        android:layout_marginTop="7px"
        android:layout_marginBottom="7px"
        android:layout_marginRight="7px"
        android:layout_marginLeft="@dimen/home_item_left_right_space_15"
        android:background="@color/white"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/icon1"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:paddingTop="@dimen/home_item_left_right_space_15"

            />


        <TextView
            android:id="@+id/goodsTitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/home_item_left_right_space_15"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/font_size_14"
            android:layout_marginLeft="@dimen/home_item_left_right_space_15"
            android:text="NO:1"/>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/shoppingPrice1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7px"
        android:layout_marginLeft="@dimen/home_item_left_right_space_15"
        android:textSize="@dimen/font_size_14"
        android:textColor="@color/text_color_red"
        android:text="NO:1"/>
    <TextView
        android:id="@+id/shoppingmark1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7px"
        android:textSize="@dimen/font_size_12"
        android:layout_marginLeft="@dimen/home_item_left_right_space_15"
        android:textColor="@color/main_text_three_color"
       />
</LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_layout2"
        android:layout_width="match_parent"
        android:layout_height="235dp"
        android:orientation="vertical"
        android:layout_marginTop="7px"
        android:layout_marginBottom="7px"
        android:layout_marginLeft="7px"
        android:layout_marginRight="@dimen/home_item_left_right_space_15"
        android:background="@color/white"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/icon2"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:paddingTop="@dimen/home_item_left_right_space_15"
            />

        <TextView
            android:id="@+id/goodsTitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/home_item_left_right_space_15"
            android:layout_marginLeft="@dimen/home_item_left_right_space_15"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/font_size_14"

            android:text="NO:1"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/shoppingPrice2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7px"
                android:layout_marginLeft="@dimen/home_item_left_right_space_15"
                android:textSize="@dimen/font_size_14"
                android:textColor="@color/text_color_red"
                android:text="NO:1"/>
            <TextView
                android:id="@+id/shoppingmark2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7px"
                android:textSize="@dimen/font_size_12"
                android:layout_marginLeft="@dimen/home_item_left_right_space_15"
                android:textColor="@color/main_text_three_color"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>