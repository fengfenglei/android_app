<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/me_pressed"
    android:layout_margin="@dimen/home_item_left_right_space_15"
    android:id="@+id/item"
    >
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
            <LinearLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/home_item_left_right_space_30"
                >

                <TextView
                    android:id="@+id/counet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main_text_tow_color"
                    android:layout_marginTop="@dimen/home_item_left_right_space_15"
                    android:textSize="@dimen/font_size_14"
                    android:text="簽到送豆"/>
    <TextView
        android:id="@+id/time"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
    android:text="2017 0.0 "
        android:textSize="@dimen/font_size_14"
        android:layout_marginBottom="@dimen/home_item_left_right_space_15"
        android:textColor="@color/main_text_three_color"/>
        </LinearLayout>


        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="货郎券"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginRight="@dimen/home_item_left_right_space_30"
            android:textSize="@dimen/font_size_16"
            android:textColor="@color/text_color_red"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/home_item_left_right_space_15"
        android:background="@color/line_color"/>
</LinearLayout>