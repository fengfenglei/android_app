<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <com.mhl.shop.main.photoView.HackyViewPager xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/view_pager"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@color/white">
	</com.mhl.shop.main.photoView.HackyViewPager>
	

    
    <FrameLayout 
             android:id="@+id/number_view_layout"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:layout_alignParentTop="true">
             <!-- #FEFEFE -->
             <TextView 
                 android:id="@+id/num_view_frme_txt"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="#FEFEFE"
                 android:textSize="@dimen/font_size_16"
                 android:layout_marginRight="25dp"
                 android:layout_marginTop="40dp"
                 android:gravity="center"
                 android:background="@drawable/details_point"
                 android:visibility="gone"/>
         </FrameLayout>
</RelativeLayout>

