<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/me_pressed"
    android:id="@+id/item">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/home_item_left_right_space_15"
            android:layout_marginTop="@dimen/home_item_left_right_space_30"
            android:layout_marginBottom="@dimen/home_item_left_right_space_30">
            <TextView
                android:id="@+id/order_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单编号"
                android:ellipsize="end"
                android:maxLines="1"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="@dimen/font_size_14"
                android:textColor="@color/main_text_tow_color"
                />
            <TextView
                android:id="@+id/money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单总额"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/font_size_14"
                android:textColor="@color/main_text_tow_color"
                />
            <TextView
                android:id="@+id/money_will"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预计激活"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/font_size_14"
                android:textColor="@color/main_text_tow_color"
                />
            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="＞"
                android:gravity="center"
                android:textSize="@dimen/font_size_14"
                android:textColor="@color/main_text_tow_color"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/divide_line_color" />
    </LinearLayout>

</LinearLayout>