<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white">
    
    <ImageView
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/home_item_left_right_space_15"
        android:layout_marginRight="@dimen/home_item_left_right_space_15"
        android:background="@drawable/return_lft"
 />

<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <TextView
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="2dp"
        android:text="00.00.00"
        android:textColor="@color/main_text_three_color"
        android:textSize="@dimen/font_size_14" />
    <TextView
        android:id="@+id/state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/main_text_tow_color"
        android:visibility="gone"
        android:textSize="@dimen/font_size_14" />
    <TextView
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/main_text_tow_color"
        android:visibility="gone"
        android:textSize="@dimen/font_size_14" />
    <!--物流-->
    <LinearLayout
        android:id="@+id/logistics_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f5f5"
        android:visibility="gone"
        android:layout_marginTop="@dimen/home_item_left_right_space_15"
        android:layout_marginRight="@dimen/home_item_left_right_space_30"
        android:padding="@dimen/home_item_left_right_space_30"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_text_three_color"
                android:textSize="@dimen/font_size_14"
                android:text="物流公司："
                android:layout_marginRight="@dimen/home_item_left_right_space_15"
                />
            <TextView
                android:id="@+id/logistics_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_text_three_color"
                android:text="我家"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/home_item_left_right_space_15"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_text_three_color"
                android:textSize="@dimen/font_size_14"
                android:text="物流单号："
                android:layout_marginRight="@dimen/home_item_left_right_space_15"
                />
            <TextView
                android:id="@+id/logistics_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_text_three_color"
                android:text="我家"
                />
        </LinearLayout>

    </LinearLayout>

    <!--地址信息-->
    <LinearLayout
        android:id="@+id/user_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f5f5"
        android:layout_marginTop="@dimen/home_item_left_right_space_15"
        android:layout_marginRight="@dimen/home_item_left_right_space_30"
        android:padding="@dimen/home_item_left_right_space_30"
        android:visibility="gone"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_text_three_color"
                android:textSize="@dimen/font_size_14"
                android:text="收货人："
                android:layout_marginRight="@dimen/home_item_left_right_space_15"
                />
            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_text_three_color"
                android:text="我家"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/home_item_left_right_space_15"
            android:orientation="horizontal">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_text_three_color"
                android:textSize="@dimen/font_size_14"
                android:text="收货地址："
                android:layout_marginRight="@dimen/home_item_left_right_space_15"
                />
            <TextView
                android:id="@+id/user_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_text_three_color"
                android:text="我家"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/home_item_left_right_space_15"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_text_three_color"
                android:textSize="@dimen/font_size_14"
                android:text="邮编："
                android:layout_marginRight="@dimen/home_item_left_right_space_15"
                />
            <TextView
                android:id="@+id/user_zip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_text_three_color"
                android:text="我家"
                />
        </LinearLayout>
    </LinearLayout>

    <!--支付信息-->
    <LinearLayout
        android:id="@+id/money_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f5f5"
        android:visibility="gone"
        android:layout_marginTop="@dimen/home_item_left_right_space_15"
        android:layout_marginRight="@dimen/home_item_left_right_space_30"
        android:padding="@dimen/home_item_left_right_space_30"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_text_three_color"
                android:textSize="@dimen/font_size_14"
                android:text="退款总金额："
                android:layout_marginRight="@dimen/home_item_left_right_space_15"
                />
            <TextView
                android:id="@+id/all_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_red"
                android:text="我家"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/home_item_left_right_space_15"
            android:visibility="gone"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_text_three_color"
                android:textSize="@dimen/font_size_14"
                android:text="货郎豆："
                android:layout_marginRight="@dimen/home_item_left_right_space_15"
                />
            <TextView
                android:id="@+id/hold_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_text_three_color"
                android:text="我家"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/home_item_left_right_space_15"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_text_three_color"
                android:textSize="@dimen/font_size_14"
                android:text="激活金额："
                android:layout_marginRight="@dimen/home_item_left_right_space_15"
                />
            <TextView
                android:id="@+id/jihuo_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_text_three_color"
                android:text="我家"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/home_item_left_right_space_15"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_text_three_color"
                android:textSize="@dimen/font_size_14"
                android:text="可提现金额："
                android:layout_marginRight="@dimen/home_item_left_right_space_15"
                />
            <TextView
                android:id="@+id/ketixian_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_text_three_color"
                android:text="我家"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/pay_way_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/home_item_left_right_space_15"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/pay_way"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_text_three_color"
                android:textSize="@dimen/font_size_14"
                android:text="支付方式："
                android:layout_marginRight="@dimen/home_item_left_right_space_15"
                />
            <TextView
                android:id="@+id/pay_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_text_three_color"
                android:text="我家"
                />
        </LinearLayout>
    </LinearLayout>
    <!--图片信息-->
    <HorizontalScrollView
        android:id="@+id/pic_hs"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/home_item_left_right_space_30"
        android:layout_marginBottom="@dimen/home_item_left_right_space_30"
        android:layout_marginRight="@dimen/home_item_left_right_space_30"
        android:layout_marginLeft="@dimen/home_item_left_right_space_30"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <GridView
                android:id="@+id/gridview"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center" >
            </GridView>
        </LinearLayout>
    </HorizontalScrollView>
   <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/line_color"
        android:layout_marginRight="10dp"
        />
</LinearLayout>
</LinearLayout>