<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/head_view"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginLeft="@dimen/home_item_left_right_space_15"
        android:layout_marginRight="@dimen/home_item_left_right_space_15">

        <TextView
            android:id="@+id/write_order_supplier_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/obligation_shop_icon"
            android:text="宝儿家服装"
            android:textColor="@color/main_text_tow_color"
            android:padding="@dimen/home_item_left_right_space_15"
            android:layout_marginRight="@dimen/home_item_left_right_space_15"
            android:drawablePadding="@dimen/home_item_left_right_space_15"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color" />
    <!--商品-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/home_item_left_right_space_15"
        android:orientation="horizontal">
        <!--商品-->
    <ImageView
        android:id="@+id/write_order_shop_icon"
        android:layout_width="75dp"
        android:layout_height="75dp"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/home_item_left_right_space_15"
            android:orientation="vertical">
            <TextView
                android:id="@+id/shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我是商品名称"
                android:maxLines="2"
                android:enabled="true"
                android:textColor="@color/main_text_tow_color"
                android:textSize="@dimen/font_size_14"/>
            <TextView
                android:id="@+id/guige"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我是商品名称"
                android:maxLines="1"
                android:enabled="true"
                android:layout_marginTop="5dp"
                android:textColor="@color/main_text_three_color"
                android:textSize="@dimen/font_size_12"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50.00"
                    android:maxLines="2"
                    android:enabled="true"
                    android:textColor="@color/text_color_red"
                    android:textSize="@dimen/font_size_14"/>
                <TextView
                    android:id="@+id/price_lit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="60.00"
                    android:layout_marginLeft="@dimen/home_item_left_right_space_30"
                    android:maxLines="1"
                    android:enabled="true"
                    android:layout_weight="1"
                    android:visibility="invisible"
                    android:textColor="@color/main_text_three_color"
                    android:textSize="@dimen/font_size_14"/>

                <TextView
                    android:id="@+id/shop_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="x1"
                    android:layout_marginLeft="@dimen/home_item_left_right_space_30"
                    android:maxLines="1"
                    android:enabled="true"
                    android:layout_marginRight="@dimen/home_item_left_right_space_15"
                    android:textColor="@color/main_text_tow_color"
                    android:textSize="@dimen/font_size_14"
                    />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <ImageView
    android:layout_width="match_parent"
    android:layout_height="0.8dp"
    android:layout_marginLeft="@dimen/home_item_left_right_space_15"
    android:layout_marginRight="@dimen/home_item_left_right_space_15"
    android:background="@color/line_color" />

    <LinearLayout
        android:id="@+id/foot_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    <!--计算运费-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="配送方式"
            android:layout_marginLeft="@dimen/home_item_left_right_space_15"
            android:layout_weight="1"
            android:textColor="@color/main_text_three_color"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/write_order_shop_logistics_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"
            android:layout_marginRight="@dimen/home_item_left_right_space_15"
           android:text="8888"/>




    </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginLeft="@dimen/home_item_left_right_space_15"
            android:layout_marginRight="@dimen/home_item_left_right_space_15"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/write_order_shop_message_ly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="@dimen/home_item_left_right_space_15"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/main_text_three_color"
                    android:text="会员留言"
                    android:textSize="@dimen/font_size_14" />
            <EditText
                android:id="@+id/write_order_shop_message"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="@string/shop_message"
                android:maxLength="45"
                android:paddingLeft="5dp"
                android:background="@null"
                android:textSize="@dimen/font_size_14" />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_marginLeft="@dimen/home_item_left_right_space_15"
                android:layout_marginRight="@dimen/home_item_left_right_space_15"
                android:background="@color/line_color" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/write_order_shop_message_ly"
                android:layout_marginTop="@dimen/home_item_left_right_space_15"
                android:layout_marginBottom="@dimen/home_item_left_right_space_15"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            <TextView
                android:id="@+id/all_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/main_text_tow_color"
                android:text="共计"
                android:textSize="@dimen/font_size_14" />
            <TextView
                android:id="@+id/write_order_shop_shop_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:text="共计"
                android:layout_marginRight="@dimen/home_item_left_right_space_15"
                android:textSize="@dimen/font_size_14" />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/line_color" />
    </LinearLayout>

    <!--<ImageView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginLeft="10dp"-->
        <!--android:layout_marginRight="10dp"-->
        <!--android:src="@drawable/setting_fgx" />-->

</LinearLayout>