<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <SurfaceView
        android:id="@+id/preview_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <com.mhl.zxing.view.ViewfinderView
        android:id="@+id/viewfinder_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp" >

        <Button
            android:id="@+id/remove"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/sweep_back"
            android:layout_marginLeft="20dp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_marginRight="20dp" />

        <Button
            android:id="@+id/deng_off"
            android:layout_width="40dp"
            android:layout_height="40dp"
             android:background="@drawable/sweep_light_close"
            android:layout_marginRight="20dp"
            
            />
        
        <Button
            android:id="@+id/deng_on"
            android:layout_width="40dp"
            android:layout_height="40dp"
             android:background="@drawable/sweep_light_open"
            android:layout_marginRight="20dp"
            android:visibility="gone"
              />
    </LinearLayout>

 

</FrameLayout>